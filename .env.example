# Flask Environment
FLASK_ENV=production

# Database Configuration
DB_TYPE=postgres
DB_HOST=localhost
DB_PORT=5432
DB_NAME=portfolio
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_PATH=portfolio.db
DB_SSLMODE=require
DB_GSSENCMODE=disable
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=1800
DB_CONNECT_TIMEOUT=10

# API Configuration
API_HOST=0.0.0.0
API_PORT=8080
API_BASE_URL=https://api.solport.com

# CORS Configuration
CORS_ORIGINS=https://solport.com,https://www.solport.com

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Job Scheduler Configuration
JOBS_DB_PATH=jobs.db 